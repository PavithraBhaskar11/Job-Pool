<%- include('partials/headerLogin')%>

<div class="container">

  <form action="/login" method="POST" class="loginform">
    <img src="" alt="">
    <div class="form-group">
      <label style="margin: 0.3125rem;  padding: 0;  font-weight: bold;font-size: 1.375rem;  color: #fff;" for="uname">Email</label>
      <input type="text" class="form-control" name="email" id="email">
    </div>
    <div class="form-group">
      <label style="margin: 0.3125rem;  padding: 0;  font-weight: bold;font-size: 1.375rem;  color: #fff;" for="pwd">Password</label>
      <input type="password" name="password" class="form-control" id="password">
    </div>

    <button style="  margin-left: 0.5rem;
        font-size: 1.2rem;
        background-color: : #01c5c4;" type="submit" class="btn btn-outline-info btn-sm mt-3">Login</button><br>
    <br>
    <% if(err != null){ %>
    <div class="form-group">
      <span style="color: red;"><b><%=err%></b></span>
    </div>
    <%}%>

    <div class="signuplink"></div>
    Not yet Registered?
    <a href="/register">Sign Up!</a>
  </form>
</div>

<%- include('partials/footerLogin')%>